%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "New ticket", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          - if signed_in?
            %li= link_to "Tickets", tickets_path
            %li#fat-menu.dropdown
              %a.dropdown-toggle{href: '#', "data-toggle" => "dropdown"}
                Admin panel 
                %b.caret
              %ul.dropdown-menu
                %li= link_to "New unassigned tickets", unassigned_path
                %li= link_to "Open Tickets", open_path
                %li= link_to "On hold tickets", hold_path
                %li= link_to "Closed Tickets", closed_path
                %br/
                %form{action: tickets_path, method: "get"}
                  = text_field_tag :search, params[:search]
                  = submit_tag "Search", name: nil, class: "btn btn-large btn-primary search_btn"
                %li.divider
                %li= link_to "Sign out", signout_path, method: :delete, class: "signout-btn"
          - else
            %li= link_to "Sign up", signup_path
            %li= link_to "Sign in", signin_path